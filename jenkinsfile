pipeline {
    environment {
        GIT_URL = "https://github.com/jjooooon/5-inque-Front.git"
        registry = "jeongjaeha/5inque"
        dockerImage = ""
        dockerhub = "https://hub.docker.com/repository/docker/jeongjaeha/5inque/general"
        dockerhub_credentials = "dockerhub"
    }
    
    agent any

    stages {
        stage('start') {
            steps {
                echo "start jenkins file test"
                slackSend (
                    channel: '#management-service-for-start-up', 
                    color: '#33FF33', 
                    message: "STARTED: 5inque web page jenkins-pipeline started"
                )
            }
        }
        stage('pull') {
            steps {
                git url : "${GIT_URL}", branch : "main", poll: true, changelog: true
            }
        }
        stage('build') {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                    dockerImageLatest = docker.build registry + ":latest"
                }
            }
        }
        stage('push') {
            steps {
                script {
                    docker.withRegistry('', dockerhub_credentials) {
                        dockerImage.push()
                        dockerImageLatest.push()
                    }
                }
            }
        }
    }
    post {
        success {
            slackSend (
                channel: '#management-service-for-start-up', 
                color: '#33FF33', 
                message: """
                SUCCESS: Job ${dockerImage}
                """
            )
        }
        failure {
            slackSend (
                channel: '#test', 
                color: '#FF0000', 
                message: "FAIL: Job ${dockerImage}"
            )
        }
    }
}